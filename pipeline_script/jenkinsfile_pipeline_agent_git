pipeline {
    agent {
        label 'node_1'
    }
    stages {
        stage('Git-Checkout') {
            steps {
                echo 'Checking out from Git Repository'
                git branch: 'dev_1', url: 'https://github.com/DucTrung1802/jenkins'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the checked-out project'
            }
        }

        stage('Unit-Test') {
            steps {
                echo 'Running JUnit tests'
                sh 'python3 test.py'
            }
        }

        stage('Quality-Gate') {
            steps {
                echo 'Quality-Gate passed successully!!'
                /*sh exit ("1");*/
            }
        }

        stage('Deploy') {
            steps {
                echo 'Pass!'
            }
        }
    }

    post {
        always {
            echo 'This will always run'
        }
        success {
            echo 'This will run only if successfull'
        }
        failure {
            echo 'This will run only if failed'
        }
        unstable {
            echo 'This will run only if the run was marked as unstable'
        }
        changed {
            echo 'This will run only if the state of the Pipeline has changed'
            echo 'For example, if the Pipeline was previously failing but is now succsessful'
        }
    }
}
